#!/usr/bin/env node

const pkg = require('../package.json');
require('please-upgrade-node')(pkg); // Validate tap-report dependency on Node
const program = require('commander');
const handleTapStream = require('../src/tap-report.js');

program
  .version(pkg.version)
  .description('A tap (test anything protocol) consumer that provides user friendly and informative tap output')
  .on('--help', () => {
    console.log(`
  Examples:

    Build project
    $ <tap output> | tap-report

  `);
  })
  .parse(process.argv);

handleTapStream();
